function [him, hs, hax, hf] = curv_plot(img,xy,curv)

hf=figure;
hax=gca;
hold(hax,'on')

buff=10;
bbox = [min(xy(1,:))-buff,...
        max(xy(1,:))+buff,...
        min(xy(2,:))-buff,...
        max(xy(2,:))+buff];

hs=scatter(hax,xy(1,:),xy(2,:),40,curv,'LineWidth',2);
freezeColors(hax);
him=imshow(img,'Parent',hax);
him.AlphaData=0.35;
uistack(him,'bottom')

hax.XLim = bbox(1:2);
hax.YLim = bbox(3:4);
hax.Position = [0 0 1 1];
hf.Position(3:4) = [bbox(2)-bbox(1))

end