function [him, hs, hax, hf, hc] = curv_plot(img,xy,curv)

% buff = 10;
% zoom = 5;
% bbox = [min(xy(1,:))-buff,...
%         max(xy(1,:))+buff,...
%         min(xy(2,:))-buff,...
%         max(xy(2,:))+buff];
% 
% hs = scatter(hax,xy(1,:),xy(2,:),60,curv,'LineWidth',3);
% hc = colorbar();
% hc.Location ='east';
% freezeColors(hax);
% him = imshow(img,'Parent',hax);
% uistack(him,'bottom')
% unfreezeColors(hax);
  



m=64;
cmap=colormap([gray(255);parula(m)]);

him=imshow(img,cmap);

hold on
hs=scatter(xy(1,:),xy(2,:),60,'LineWidth',3);
hold off

hs.MarkerFaceColor = 'flat';
him.AlphaData = 0.4;

cmin=min(curv);
cmax=max(curv);
curv_color = min(m,round((m-1)*(curv-cmin)/(cmax-cmin))+1);
hs.CData=curv_color+255;

hc=colorbar('Location','east');
hc.Limits=[256, 256+m-1];
hc.Ticks = linspace(255,255+m,5);
hc.TickLabels = ...
    cellfun(@num2str,...
            mat2cell(linspace(0,0.2,5)',...
                     ones(size(linspace(0,0.2,5)',1),...
                     1),...
            1),'UniformOutput',false)


hf=gcf;
hax=gca;


% hax.XLim = bbox(1:2);
% hax.YLim = bbox(3:4);
hax.Position = [0 0 1 1];
% hf.Position(3:4) = [(bbox(2)-bbox(1))*zoom,...
%                     (bbox(4)-bbox(3))*zoom];

end